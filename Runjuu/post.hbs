{{!文章}}
{{!< default}}
{{#post}}

<header class="main-header 123 post-head {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}">
    <nav class="main-nav {{#if image}}overlay{{/if}} clearfix">
        {{#if @blog.navigation}}
            <h1>{{{title}}}</h1>
            <h1>{{author}}</h1>
        {{/if}}
    </nav>
</header>

<section class="post-content">
    {{content}}
</section>

{{/post}}